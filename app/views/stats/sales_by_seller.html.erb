<%= include_stats_js %>

<%= render 'shared/date_filter', from_date: @from_date, to_date: @to_date %>

<div class="readonly-data">
  <% if @sales_by_seller_count.blank? %>
    <div class="alert alert-warning"><%= t('view.stats.empty_result') %></div>
  <% else %>
    <div class='row-fluid'>
      <div class='span3'>
        <table class="table table-striped" data-graph-grid="true" data-others-label="<%= t('label.others') %>">
          <thead>
            <tr>
              <th><%= t('view.sellers.seller') %></th>
              <th><%= t('view.sellers.sales_count') %></th>
            </tr>
          </thead>

          <tbody>
            <% @sales_by_seller_count.sort.each do |sale, count| %>
              <tr>
                <td data-label-column="true"><%= sale %></td>
                <td data-value-column="true"><%= count %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <div class='span9'>
        <div id="graph" class='piechart'></div>
      </div>
    </div>
  <% end %>
</div>

<div class="form-actions">
  <div class="btn-group">
    <%= link_to t('view.stats.index_title'), stats_path,
      class: 'btn btn-primary' %>
    <button class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
      <span class="caret"></span>
    </button>
    <ul class="dropdown-menu">
      <li><%= link_to t('view.stats.sales_earn.title'), sales_earn_stats_path %></li>
    </ul>
  </div>
</div>
