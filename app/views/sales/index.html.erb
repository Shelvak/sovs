<% if @sales.empty? %>
  <%= render 'shared/empty_index' %>
<% else %>
  <div class="row">
    <div class="span12">
      <table class="table resource-list">
        <thead>
          <tr>
            <th><%= Sale.human_attribute_name 'customer_id' %></th>
            <th><%= Sale.human_attribute_name 'seller_id' %></th>
            <th><%= Sale.human_attribute_name 'sale_kind' %></th>
            <th><%= Sale.human_attribute_name 'total_price' %></th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @sales.each do |sale| %>
            <tr>
              <td><%= sale.customer_id %></td>
              <td><%= sale.seller_id %></td>
              <td><%= sale.sale_kind %></td>
              <td><%= sale.total_price %></td>
              <td><%= link_to_show sale %></td>
              <td><%= link_to_edit edit_sale_path(sale) if can? :update, sale %></td>
              <td><%= link_to_destroy sale if can? :destroy, sale %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <%= pagination_links(@sales) %>
<% end %>

<div class="form-actions">
  <%= link_to(
    t('view.sales.new', default: :'label.new'),
    new_sale_path, class: 'btn btn-primary'
  ) if can? :create, Sale %>
</div>
